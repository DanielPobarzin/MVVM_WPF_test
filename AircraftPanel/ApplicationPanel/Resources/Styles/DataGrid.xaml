<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="CustomHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#d62311"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="Century Gothic"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>
    <Style x:Key="DataGridTextColumnStyle" TargetType="DataGridCell">
        <Setter Property="FontFamily" Value="pack://application:,,,/ApplicationPanel;component/Resources/Fonts/#DS-Digital"/>
        <Setter Property="Foreground" Value="Yellow"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>
</ResourceDictionary>